{
  "name": "odoo-fatturapa-viewer",
  "version": "2.0.0",
  "private": true,
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/chrome": "^0.1.36",
    "@types/node-forge": "^1.3.14",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run typecheck && esbuild src/bg.ts src/popup.ts src/intercept.ts src/viewer.ts --bundle --format=esm --platform=browser --outdir=dist && npm run copy:static",
    "build:clean": "npm run clean && npm run build",
    "test:e2e": "npm run build && playwright test",
    "test:unit": "vitest run",
    "watch": "esbuild src/bg.ts src/popup.ts src/intercept.ts src/viewer.ts --bundle --format=esm --platform=browser --outdir=dist --watch",
    "copy:static": "cp -R public/. dist/ && cp manifest.json dist/",
    "typecheck": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "node-forge": "^1.3.3",
    "npm-check-updates": "^19.3.2"
  }
}
