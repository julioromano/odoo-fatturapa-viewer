{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "lib": ["DOM", "ES2020"],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["chrome"],
    "sourceMap": true
  },
  "include": ["src/**/*.ts"]
}
